<% if user_signed_in? %>
	<%= form_for  [:book,@post] do |f| %>	
		<%= javascript_include_tag Ckeditor.cdn_url %>
		<%= f.hidden_field :user_id, value: current_user.id %>
		<%= f.text_field :title, placeholder: "title", class: 'form-control' %>
		<%= f.cktext_area :content, class: "ckeditor" %>
		<%= f.submit 'create' %>
	<% end %>
<% end %>